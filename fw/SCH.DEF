;PENDEFENISI UNTUK PERANGKAT KERAS UTAMA

MCS		EQU	52		; Tipe MCS yg dipakai: 80(51)/80(52)

P_Spkr		BIT	P1.0
P_IRQ_RTC	BIT	P1.1		; T2EX
P_Alarm		BIT	P1.2
P_RMT_RTS	BIT	P1.3
P_EU_RxD	BIT	P1.4
P_EU_TxD	BIT	P1.5
I2C_SDA		BIT	P1.6
I2C_SCL		BIT	P1.7

P_PRN_Ack	BIT	P3.3		; INT1
P_Watchdog	BIT	P3.4		; T0
P_JMB_RST	BIT	P3.5		; T1

IRQ_PRN		BIT	IE1
IE_PRN		BIT	EX1
IP_PRN		BIT	PX1
IT_PRN		BIT	IT1

IVec_Printer	CODE	13H		; vektor IE1

IF (MCS = 51)
		IVec_PB	CODE	03H	; IE0
ENDIF

IF (MCS = 52)
		IVec_PB	CODE	1BH	; TF1
ENDIF

HW_JMB_Dasar	XDATA	0F900h
HW_KP_Dasar	XDATA	0FA00H
HW_LCD_Dasar	XDATA	0FC00H
HW_PPI_Dasar	XDATA	0FB00h
HW_PT_Dasar	EQU	HW_PPI_Dasar	; = bandar PA

FM_PT_X0	EQU	1000B		; A2A1 = 01
FM_PT_X1	EQU	0100B		; A2A1 = 10
;FM_PT_Stat	EQU	11100000B	; Y[0..3] = PA[5..7]

FM_PRN_Status	EQU	0Fh	; status dari printer (PC.0..PC.3)
FM_PRN_Terbalik	EQU	1100B
FP_PRN_Busy	EQU	0	; PC.0
FP_PRN_PE	EQU	1	; PC.1
FP_PRN_Slct	EQU	2	; PC.2, tepilih = 1
FP_PRN_Err	EQU	3	; PC.3, aktif rendah
FP_PRN_Stobe	EQU	4	; PC.4 (ke prn)

FP_RMT_DTR		EQU	5	; PC.5
FM_RMT_DCEStatus	EQU	111b	; PA.0=!CD, PA.1=!DSR, PA.2=!CTS
FP_RMT_CD		EQU	0
FP_RMT_DSR		EQU	1
FP_RMT_CTS		EQU	2

FM_JMB_DCEStatus	EQU	00011000b	; PA.3=!DSR, PA.4=!CTS
FP_JMB_DSR		EQU	3		; PA.3

CA_PCF8583	EQU	10100000B	; pena A=0

KapasitasRAM	EQU	1024*8
KapasitasROM	EQU	1024*8
